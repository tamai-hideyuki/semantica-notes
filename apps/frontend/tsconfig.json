{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*":  ["src/components/*"],
      "@domain/*":      ["src/core/domain/*"],
      "@usecases/*":    ["src/core/usecases/*"],
      "@hooks/*":       ["src/hooks/*"],
      "@api/*":         ["src/infrastructure/api/*"],
      "@utils/*":       ["src/infrastructure/utils/*"],
      "@controllers/*": ["src/interfaces/controllers/*"],
      "@dtos/*":        ["src/interfaces/dtos/*"],
      "@presenters/*":  ["src/interfaces/presenters/*"],
      "@lib/*":         ["src/lib/*"],
      "@pages/*":       ["src/pages/*"],
      "@styles/*":      ["src/styles/*"]

    },
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "incremental": true,
    "strict": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "__tests__", "global.d.ts"],
  "exclude": ["node_modules", ".next"]
}
